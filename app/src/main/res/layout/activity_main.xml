<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kitagawatatsuya.example.com.youtubeview.MainActivity">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/video"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />



        <TextView
            android:id="@+id/title_text"
            android:text="サンプル動画"
            android:layout_width="wrap_content"
             android:layout_height="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="視聴回数"
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/see_count"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/h_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/l_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channel_group"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

        <ImageView
         android:id="@+id/channel_icon"
         android:src="@mipmap/ic_launcher"
         android:layout_width="wrap_content"
         android:layout_height="24dp" />

        <TextView
         android:id="@+id/channel_name"
         android:text="ぼくのチャンネル"
         android:layout_width="wrap_content"
         android:layout_height="16dp" />

        <TextView
            android:id="@+id/channel_reg"
            android:text="チャンネル登録"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="次の動画"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/douga_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>
